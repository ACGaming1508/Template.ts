{
	"extends": "@sapphire/ts-config",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"tsBuildInfoFile": "dist/.tsbuildinfo",
		"lib": [
			"ES2021"
		],
		"skipLibCheck": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"preserveConstEnums": false,
		"newLine": "crlf",
		"ignoreDeprecations": "5.0",
	},
	"include": [
		"src"
	],
}